{
  "packages": ["packages/*"],
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "registry": "http://localhost:4873"
    },
    "version": {
      "allowBranch": "main",
      "createRelease": true,
      "message": "chore(release): publish %s"
    }
  }
}
